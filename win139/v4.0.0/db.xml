  	<testOnBorrow>true</testOnBorrow>
  	<!-- 从连接池中获取数据库链接返回时是否进行验证，默认false，如果设置为true，必须设置validationQuery -->
  	<testOnReturn>false</testOnReturn>
  	<!-- 是否验证闲置对象，闲置对象将被从连接池中删除，默认false，如果设置为true，必须设置validationQuery -->
  	<testWhileIdle>true</testWhileIdle>
  	<!-- 用于验证数据库连接是否有效，默认null，例如：SELECT 1(mysql), select 1 from dual(oracle), SELECT 1(MS Sql Server) -->
  	<validationQuery>select 1 from dual</validationQuery>
  	<!-- 验证类名，如果指定将代替其他查询验证，默认null -->
  	<validatorClassName></validatorClassName>
  	<!-- 验证和清除线程休眠时间，单位毫秒，指示多长时间检查一次空闲、无效的连接 -->
  	<timeBetweenEvictionRunsMillis>30000</timeBetweenEvictionRunsMillis>
	<!-- 对象在连接池中被逐出前总闲置时间的最小值，单位毫秒 -->
  	<minEvictableIdleTimeMillis>30000</minEvictableIdleTimeMillis>
	<!-- 标志是否移除使用超过removeAbandonedTimeout的连接 -->
  	<removeAbandoned>true</removeAbandoned>
  	<!-- 连接使用超时时间，单位秒 -->
  	<removeAbandonedTimeout>60</removeAbandonedTimeout>
  	<!-- 标记是否记录连接移除信息 -->
  	<logAbandoned>true</logAbandoned>
  	<!-- 发送给jdbc的连接属性，格式[propertyName=property;]，默认null -->
  	<connectionProperties></connectionProperties>
