  	<maxIdle>100</maxIdle>
  	<!-- 连接池中最小的连接数 -->
  	<minIdle>10</minIdle>
  	<!-- 连接池创建时初始的连接数 -->
  	<initialSize>10</initialSize>
  	<!-- 连接超时时间，单位毫秒(当连接池中没有可用的连接时，连接池将对超过该值还没有返回的连接抛出超时异常) -->
  	<maxWait>60000</maxWait>
